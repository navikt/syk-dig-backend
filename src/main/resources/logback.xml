<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>x_request_id</includeMdcKeyName>
        </encoder>
    </appender>

         <appender name="auditLogger" class="net.logstash.logback.appender.LogstashTcpSocketAppender"> 
          <destination>audit.nais:6514</destination> 
          <writeBufferSize>128000</writeBufferSize> 
          <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"> 
              <pattern>${HOSTNAME} syk-dig-backend: %msg%n</pattern> 
          </encoder> 
      </appender>

    <logger level="INFO" name="auditLogger" additivity="false">
        <appender-ref ref="auditLogger" />
    </logger>

    <appender name="secure_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/secure-logs/secure.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/secure-logs/secure.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <logger name="securelog" level="INFO" additivity="false">
        <appender-ref ref="secure_log" />
    </logger>

    <root level="INFO">
        <appender-ref ref="stdout_json"/>
    </root>

    <logger name="no.nav" level="INFO"/>
    <logger name="org.apache.kafka" level="WARN"/>

</configuration>
